<?xml version="1.0"?>
<configuration >
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{48} - %msg%n</pattern>
        </encoder>
    </appender>
    <logger name="de.quantummaid.httpmaid" level="debug"/>
    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>